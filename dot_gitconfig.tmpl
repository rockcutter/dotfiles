[user]
	name = rockcutter
	email = {{ .email }}
[alias]
	a = "!f() { git add \"$@\" && git status -s -u; }; f"
	add = "!f() { git add \"$@\" && git status -s -u; }; f"
	sw = switch
	swf = "!f () { git switch $(git --no-pager branch --sort=-committerdate | fzf); };f"
	s = status
	ss = status -s -u
	s = switch
	cm = commit
	cmm = commit -m
	b = branch
	cdiff = diff --cached

[core]
	editor = nvim
[push]
	autoSetupRemote = true
[pull]
	rebase = false

